<Application x:Class="LIMS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:LIMS"
             StartupUri="UI/MainWindow.xaml">
    <Application.Resources>
        <System:Double x:Key="GlobalFontSize">16</System:Double>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#ef1325" />
            <Setter Property="Padding" Value="5,0,5,0"/>
        </Style>

    </Application.Resources>
    

</Application>
