<Window x:Class="LIMS.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LIMS.UI"
        xmlns:panels="clr-namespace:LIMS.UI.Panels"
        mc:Ignorable="d"
        Title="LIMS"
        WindowState="Maximized"
        ResizeMode="CanResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <panels:HeaderPanel x:Name="HeaderPanelControl" Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0"/>

        <panels:ToolsPanel x:Name="ToolsPanelControl" Grid.Row="1" Grid.RowSpan="2" Grid.Column="0"/>

        <panels:PreviewPanel x:Name="PreviewPanelControl" Grid.Row="1" Grid.Column="1"/>

        <panels:ActionPanel x:Name="ActionPanelControl" Grid.Row="2" Grid.Column="1"/>

    </Grid>
    
</Window>
