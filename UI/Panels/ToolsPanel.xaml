<UserControl x:Class="LIMS.UI.Panels.ToolsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LIMS.UI.Panels"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="#444" BorderThickness="0,1,0,0">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Margin="10">

                <TextBlock Text="Tools" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                <Expander Header="Watermark" IsExpanded="True">
                    <StackPanel Margin="10">
                        <CheckBox Content="Enable Watermark" Checked="EnableWatermark" Unchecked="DisableWatermark"/>

                        <Label Content="Watermark File:" Margin="0,10,0,0"/>
                        <Button Content="Browse..." Width="120" Click="OnBrowseButtonClicked"/>

                        <Label Content="Position:" Margin="0,10,0,0"/>
                        <ComboBox x:Name="WatermarkPositionComboBox" SelectionChanged="WatermarkPositionChanged">
                            <ComboBoxItem Content="Top-left"/>
                            <ComboBoxItem Content="Top-right"/>
                            <ComboBoxItem Content="Bottom-left"/>
                            <ComboBoxItem Content="Bottom-right"/>
                            <ComboBoxItem Content="Center" IsSelected="True"/>
                        </ComboBox>

                        <Label Content="Opacity:" Margin="0,10,0,0"/>
                        <Slider Minimum="0" Maximum="1" Value="0.7" ValueChanged="OpacitySliderValueChanged"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Scale" IsExpanded="False">
                    <StackPanel Margin="10">
                        <CheckBox Content="Enable Scaling" Checked="EnableScaling" Unchecked="DisableScaling"/>

                        <Label Content="Scale value (0.1-2.0):" Margin="0,10,0,0"/>
                        <xctk:DecimalUpDown Minimum="0.1" Maximum="2" Increment="0.1" FormatString="F1" DefaultValue="1" ValueChanged="ScaleValueChanged"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Resize" IsExpanded="False">
                    <StackPanel Margin="10">
                        <CheckBox Content="Enable Resize" Checked="EnableResize" Unchecked="DisableResize"/>
                        <Label Content="Width:" Margin="0,10,0,0"/>
                        <xctk:IntegerUpDown Minimum="1" Maximum="10000" ValueChanged="ResizeWidthChanged"/>
                        <Label Content="Height:" Margin="0,10,0,0"/>
                        <xctk:IntegerUpDown Minimum="1" Maximum="10000" ValueChanged="ResizeHeightChanged"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Flip" IsExpanded="False">
                    <StackPanel Margin="10">
                        <CheckBox Content="Enable Flip" Checked="EnableFlip" Unchecked="DisableFlip"/>
                        <Label Content="Flip Directions:" Margin="0,10,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <CheckBox Content="Horizontal" Margin="0,0,10,0" Checked="FlipHorizontalChanged" Unchecked="FlipHorizontalChanged"/>
                            <CheckBox Content="Vertical" Checked="FlipVerticalChanged" Unchecked="FlipVerticalChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <Expander Header="Brightness" IsExpanded="False">
                    <StackPanel Margin="10">
                        <CheckBox Content="Enable Brightness" Checked="EnableBrightness" Unchecked="DisableBrightness"/>
                        <Label Content="Brightness (0.1-3.0):" Margin="0,10,0,0"/>
                        <xctk:DecimalUpDown Minimum="0.1" Maximum="3" Increment="0.1" FormatString="F1" DefaultValue="1" ValueChanged="BrightnessChanged"/>
                    </StackPanel>
                </Expander>

            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
