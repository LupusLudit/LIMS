<UserControl x:Class="LIMS.UI.Panels.HeaderPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LIMS.UI.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ContextMenu x:Key="PreferencesMenu">
            <MenuItem Header="Zoom In" Click="ZoomInClick"/>
            <MenuItem Header="Zoom Out" Click="ZoomOutClick"/>
        </ContextMenu>
    </UserControl.Resources>

    <Grid>
        <Button Content="Preferences" Padding="10,5" HorizontalAlignment="Left" Margin="2" VerticalAlignment="Center" Click="PreferencesClick" x:Name="PreferencesButton"/>
        
    </Grid>
</UserControl>
