<UserControl x:Class="LIMS.UI.Panels.ActionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LIMS.UI.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="#444" BorderThickness="1,0,1,0">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Expander Header="Import:">
                    <StackPanel Margin="10">
                        <Button Content="Import files" Height="50" Margin="5" Click="OnImportFilesClickAsync"/>
                        <Button Content="Import from folder" Height="50" Margin="5" Click="OnImportFromFolderClickAsync"/>
                    </StackPanel>
                </Expander>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <Label Content="Apply all changes:"/>
                <Button Content="Export" Height="50" Margin="0,0,0,5" Click="OnExportButtonClickAsync"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="10">
                <Label Content="Remove all images:"/>
                <Button Content="Clear" Height="50" Margin="0,0,0,5" Click="OnClearButtonClick" Style="{StaticResource RedButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>

</UserControl>
